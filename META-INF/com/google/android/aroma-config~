  #-- Title
	"<~wipe.title>",
	  
  #-- Sub Title
	"<~wipe.desc>",
	  
  #-- Icon
	"@wipe",
	  
  # Will be saved in /tmp/aroma/mods.prop
	"wipe.prop",
	  
  #----------------------------------[ Selectbox With Groups ]-----------------------------------#
  # TITLE            |  SUBTITLE                                                 | Initial Value #
  #------------------+-----------------------------------------------------------+---------------#
    "Wipe",             "",                                                             2,  	 #-- Group 1. key = "selected.1"
    "DATA",         	"<~wipe.data>",                             			0,       #-- item.1.1
