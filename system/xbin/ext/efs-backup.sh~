#!/system/bin/sh

BB=/system/bin/busybox

if [ ! -f /data/.siyah/modembackup.tar.gz ]; then
	$BB mkdir /data/.siyah;
	$BB chmod 777 /data/.siyah;
	$BB tar zcvf /data/.siyah/modembackup.tar.gz /modem;
	$BB cat /dev/block/mmcblk0p3 > /data/.siyah/modemdev-mmcblk0p3.img;
	$BB gzip /data/.siyah/modemdev-mmcblk0p3.img;
	$BB cp /data/.siyah/modem* /data/media/;
	$BB chmod 777 /data/media/modemdev-mmcblk0p3.img;
	$BB chmod 777 /data/media/modembackup.tar.gz;
	(
		sleep 120;
		cp /data/media/modem* /sdcard/;
	)&
fi;
